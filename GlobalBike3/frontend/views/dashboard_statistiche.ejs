<%- include('partials/header', { titolo: 'Statistiche Clienti - Bike and Hike' }) %>

<div class="container py-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <!-- Header della pagina -->
      <div class="d-flex align-items-center justify-content-between mb-4">
        <div class="d-flex align-items-center">
          <img src="/img/logo.png" alt="Logo" class="logo me-3">
          <div>
            <h2 class="mb-0">Statistiche Clienti</h2>
            <small class="text-muted">Panoramica generale dell'associazione</small>
          </div>
        </div>
        <div class="d-flex gap-2">
          <a href="/clienti/lista" class="btn btn-primary">
            <i class="bi bi-people-fill me-1"></i>Lista Clienti
          </a>
          <button class="btn btn-outline-secondary" onclick="location.reload()">
            <i class="bi bi-arrow-clockwise me-1"></i>Aggiorna
          </button>
        </div>
      </div>

      <!-- Messaggi -->
      <% if (typeof errore !== 'undefined' && errore) { %>
        <div class="alert alert-danger">
          <i class="bi bi-exclamation-circle me-2"></i><%= errore %>
        </div>
      <% } %>

      <% if (typeof statistiche !== 'undefined' && statistiche) { %>
        <!-- Cards principali -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mb-4">
          <!-- Totale clienti -->
          <div class="col">
            <div class="card border-0 bg-primary text-white h-100">
              <div class="card-body text-center">
                <i class="bi bi-people fs-1 mb-2"></i>
                <h3 class="mb-1"><%= statistiche.totale_clienti || 0 %></h3>
                <p class="mb-0">Clienti Totali</p>
              </div>
            </div>
          </div>

          <!-- Tessere valide -->
          <div class="col">
            <div class="card border-0 bg-success text-white h-100">
              <div class="card-body text-center">
                <i class="bi bi-check-circle fs-1 mb-2"></i>
                <h3 class="mb-1"><%= statistiche.tessere_valide || 0 %></h3>
                <p class="mb-0">Tessere Valide</p>
                <small class="opacity-75">(<%= statistiche.percentuale_tessere_valide || 0 %>%)</small>
              </div>
            </div>
          </div>

          <!-- Tessere scadute -->
          <div class="col">
            <div class="card border-0 bg-warning text-white h-100">
              <div class="card-body text-center">
                <i class="bi bi-clock-history fs-1 mb-2"></i>
                <h3 class="mb-1"><%= statistiche.tessere_scadute || 0 %></h3>
                <p class="mb-0">Tessere Scadute</p>
                <small class="opacity-75">(<%= (100 - (statistiche.percentuale_tessere_valide || 0)) %>%)</small>
              </div>
            </div>
          </div>

          <!-- Nuovi iscritti -->
          <div class="col">
            <div class="card border-0 bg-info text-white h-100">
              <div class="card-body text-center">
                <i class="bi bi-person-plus fs-1 mb-2"></i>
                <h3 class="mb-1"><%= statistiche.nuovi_ultimo_mese || 0 %></h3>
                <p class="mb-0">Nuovi Iscritti</p>
                <small class="opacity-75">Ultimo mese</small>
              </div>
            </div>
          </div>
        </div>

        <!-- Grafici e dettagli -->
        <div class="row g-4">
          <!-- Grafico a torta tessere -->
          <div class="col-md-6">
            <div class="card h-100">
              <div class="card-header bg-light">
                <h5 class="mb-0">
                  <i class="bi bi-pie-chart me-2"></i>Stato Tessere
                </h5>
              </div>
              <div class="card-body">
                <div class="text-center">
                  <canvas id="chartTessere" width="300" height="300"></canvas>
                </div>
                <div class="row mt-3">
                  <div class="col-6 text-center">
                    <div class="badge bg-success fs-6 p-2">
                      <i class="bi bi-check-circle me-1"></i>
                      Valide: <%= statistiche.tessere_valide || 0 %>
                    </div>
                  </div>
                  <div class="col-6 text-center">
                    <div class="badge bg-warning fs-6 p-2">
                      <i class="bi bi-clock-history me-1"></i>
                      Scadute: <%= statistiche.tessere_scadute || 0 %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Informazioni di contatto -->
          <div class="col-md-6">
            <div class="card h-100">
              <div class="card-header bg-light">
                <h5 class="mb-0">
                  <i class="bi bi-telephone me-2"></i>Informazioni di Contatto
                </h5>
              </div>
              <div class="card-body">
                <div class="row">
                  <div class="col-6">
                    <div class="text-center p-3 border rounded">
                      <i class="bi bi-envelope-fill text-primary fs-2"></i>
                      <h4 class="mt-2 mb-1"><%= statistiche.con_email || 0 %></h4>
                      <p class="mb-0 text-muted">Con Email</p>
                      <small class="text-success">
                        <%
                          var percEmail = statistiche.totale_clienti > 0 ? 
                            Math.round((statistiche.con_email / statistiche.totale_clienti) * 100) : 0;
                        %>
                        <%= percEmail %>%
                      </small>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="text-center p-3 border rounded">
                      <i class="bi bi-phone-fill text-success fs-2"></i>
                      <h4 class="mt-2 mb-1"><%= statistiche.con_cellulare || 0 %></h4>
                      <p class="mb-0 text-muted">Con Cellulare</p>
                      <small class="text-success">
                        <%
                          var percCell = statistiche.totale_clienti > 0 ? 
                            Math.round((statistiche.con_cellulare / statistiche.totale_clienti) * 100) : 0;
                        %>
                        <%= percCell %>%
                      </small>
                    </div>
                  </div>
                </div>
                
                <!-- Progress bars -->
                <div class="mt-4">
                  <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                      <span class="small fw-semibold">Copertura Email</span>
                      <span class="small"><%= percEmail %>%</span>
                    </div>
                    <div class="progress" style="height: 8px;">
                      <div class="progress-bar bg-primary" style="width: <%= percEmail %>%"></div>
                    </div>
                  </div>
                  
                  <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                      <span class="small fw-semibold">Copertura Telefonica</span>
                      <span class="small"><%= percCell %>%</span>
                    </div>
                    <div class="progress" style="height: 8px;">
                      <div class="progress-bar bg-success" style="width: <%= percCell %>%"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Timeline iscrizioni -->
        <div class="row mt-4">
          <div class="col-12">
            <div class="card">
              <div class="card-header bg-light">
                <h5 class="mb-0">
                  <i class="bi bi-calendar-range me-2"></i>Timeline Iscrizioni
                </h5>
              </div>
              <div class="card-body">
                <div class="row text-center">
                  <div class="col-md-4">
                    <div class="border-end">
                      <i class="bi bi-calendar-check text-success fs-1"></i>
                      <h6 class="mt-2">Prima Iscrizione</h6>
                      <p class="text-muted mb-0">
                        <% if (statistiche.prima_iscrizione) { %>
                          <%= new Date(statistiche.prima_iscrizione).toLocaleDateString('it-IT', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                          }) %>
                        <% } else { %>
                          Non disponibile
                        <% } %>
                      </p>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="border-end">
                      <i class="bi bi-calendar-plus text-primary fs-1"></i>
                      <h6 class="mt-2">Ultima Iscrizione</h6>
                      <p class="text-muted mb-0">
                        <% if (statistiche.ultima_iscrizione) { %>
                          <%= new Date(statistiche.ultima_iscrizione).toLocaleDateString('it-IT', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                          }) %>
                        <% } else { %>
                          Non disponibile
                        <% } %>
                      </p>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <i class="bi bi-graph-up text-info fs-1"></i>
                    <h6 class="mt-2">Crescita Mensile</h6>
                    <p class="text-muted mb-0">
                      <% if (statistiche.nuovi_ultimo_mese && statistiche.nuovi_ultimo_mese > 0) { %>
                        +<%= statistiche.nuovi_ultimo_mese %> nuovi clienti
                      <% } else { %>
                        Nessun nuovo cliente
                      <% } %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Azioni rapide -->
        <div class="row mt-4">
          <div class="col-12">
            <div class="card">
              <div class="card-header bg-light">
                <h5 class="mb-0">
                  <i class="bi bi-lightning me-2"></i>Azioni Rapide
                </h5>
              </div>
              <div class="card-body">
                <div class="row g-3">
                  <div class="col-md-3">
                    <a href="/clienti/nuovo" class="btn btn-success w-100">
                      <i class="bi bi-person-plus me-1"></i>Nuovo Cliente
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="/clienti/lista?attivi_solo=false" class="btn btn-warning w-100">
                      <i class="bi bi-clock-history me-1"></i>Tessere Scadute
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="/clienti/lista?orderBy=data_iscrizione&order=DESC" class="btn btn-info w-100">
                      <i class="bi bi-people me-1"></i>Ultimi Iscritti
                    </a>
                  </div>
                  <div class="col-md-3">
                    <a href="/eventi/nuovo" class="btn btn-primary w-100">
                      <i class="bi bi-calendar-plus me-1"></i>Nuovo Evento
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      <% } else { %>
        <!-- Stato vuoto -->
        <div class="alert alert-info text-center">
          <i class="bi bi-info-circle me-2"></i>
          Nessuna statistica disponibile. Aggiungi alcuni clienti per vedere i dati.
          <div class="mt-3">
            <a href="/clienti/nuovo" class="btn btn-success">
              <i class="bi bi-person-plus me-1"></i>Aggiungi il primo cliente
            </a>
          </div>
        </div>
      <% } %>

      <!-- Info aggiornamento -->
      <% if (typeof timestamp !== 'undefined' && timestamp) { %>
        <div class="row mt-4">
          <div class="col-12">
            <div class="text-center text-muted">
              <small>
                <i class="bi bi-clock me-1"></i>
                Statistiche aggiornate il <%= new Date(timestamp).toLocaleString('it-IT') %>
              </small>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Chart.js per i grafici -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
<% if (typeof statistiche !== 'undefined' && statistiche) { %>
// Grafico a torta per lo stato delle tessere
try {
  const ctx = document.getElementById('chartTessere').getContext('2d');
  const chartTessere = new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: ['Tessere Valide', 'Tessere Scadute'],
      datasets: [{
        data: [<%= statistiche.tessere_valide || 0 %>, <%= statistiche.tessere_scadute || 0 %>],
        backgroundColor: [
          '#198754', // Verde per valide
          '#ffc107'  // Giallo per scadute
        ],
        borderWidth: 3,
        borderColor: '#ffffff'
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'bottom',
          labels: {
            padding: 20,
            usePointStyle: true,
            font: {
              size: 14
            }
          }
        },
        tooltip: {
          callbacks: {
            label: function(context) {
              const total = <%= statistiche.totale_clienti || 1 %>;
              const percentage = Math.round((context.raw / total) * 100);
              return context.label + ': ' + context.raw + ' (' + percentage + '%)';
            }
          }
        }
      },
      cutout: '60%'
    }
  });
} catch (error) {
  console.error('Errore creazione grafico:', error);
}
<% } %>
</script>

<%- include('partials/footer') %>