    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // FunzionalitÃ  di ricerca
        document.querySelector('.modern-search').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const links = document.querySelectorAll('.sidebar-link, .sidebar-sublink');
            
            links.forEach(link => {
                const text = link.textContent.toLowerCase();
                const parent = link.closest('.accordion-item');
                
                if (text.includes(searchTerm)) {
                    link.style.display = 'flex';
                    if (parent && searchTerm !== '') {
                        // Espandi l'accordion se trova risultati
                        const collapse = parent.querySelector('.accordion-collapse');
                        if (collapse && !collapse.classList.contains('show')) {
                            const button = parent.querySelector('.accordion-button');
                            button.click();
                        }
                    }
                } else {
                    link.style.display = searchTerm === '' ? 'flex' : 'none';
                }
            });
        });

        // Evidenzia il link attivo e permetti navigazione
        document.querySelectorAll('.sidebar-link, .sidebar-sublink').forEach(link => {
            link.addEventListener('click', function(e) {
                // Rimuovi classe active da tutti i link
                document.querySelectorAll('.sidebar-link, .sidebar-sublink').forEach(l => {
                    l.classList.remove('active');
                });
                
                // Aggiungi classe active al link cliccato
                this.classList.add('active');
                
                // I link ora funzioneranno normalmente
                console.log('Navigazione verso:', this.getAttribute('href'));
            });
        });
    </script>
